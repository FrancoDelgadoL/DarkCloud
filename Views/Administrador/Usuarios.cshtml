@model IEnumerable<DarkCloud.Models.Usuario>
@{
    ViewData["Title"] = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="admin-panel d-flex">
    <nav class="admin-sidebar bg-dark text-white p-4" style="min-width:220px; min-height:80vh;">
        <h4 class="mb-4">Admin</h4>
        <ul class="nav flex-column">
            <li class="nav-item mb-2"><a class="nav-link text-white" href="/Administrador">Dashboard</a></li>
            <li class="nav-item mb-2"><a class="nav-link text-white" href="/Administrador/Productos">Productos</a></li>
            <li class="nav-item mb-2"><a class="nav-link text-white active" href="/Administrador/Usuarios">Usuarios</a></li>
            <li class="nav-item mb-2"><a class="nav-link text-white" href="/Administrador/HomeHeroConfig">Config. Home</a></li>
            <li class="nav-item mb-2"><a class="nav-link text-white" href="/">Volver a la tienda</a></li>
        </ul>
    </nav>
    <main class="flex-fill p-4">
        <h2>Gesti√≥n de Usuarios</h2>
        <div class="d-flex justify-content-between align-items-center mb-3">
            <span></span>
            <a href="/Administrador/CrearUsuario" class="btn btn-success">Crear nuevo usuario</a>
        </div>
        @if (TempData["Mensaje"] != null) {
            <div class="alert alert-success">@TempData["Mensaje"]</div>
        }
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Email</th>
                    <th>Rol</th>
                    <th>Fecha Registro</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var usuario in Model)
                {
                    <tr>
                        <td>@usuario.Id</td>
                        <td>@usuario.Nombre</td>
                        <td>@usuario.Apellido</td>
                        <td>@usuario.Email</td>
                        <td>@usuario.Rol</td>
                        <td>@usuario.FechaRegistro.ToString("yyyy-MM-dd")</td>
                    </tr>
                }
            </tbody>
        </table>
    </main>
</div>

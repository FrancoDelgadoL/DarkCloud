@{
    ViewData["Title"] = "Registrar Cuenta";
    Layout = "../Shared/_Layout.cshtml";
}
<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg p-4" style="background:#181a1b; min-width:340px; max-width:400px; width:100%; border-radius:18px; border:1px solid #333;">
        <h2 class="text-center mb-4" style="color:#ffd600; font-weight:700; letter-spacing:1px;">Registrar Cuenta</h2>
        @if (TempData["Error"] != null) {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }
        @if (TempData["Mensaje"] != null) {
            <div class="alert alert-success">@TempData["Mensaje"]</div>
        }
        <form method="post" action="/Account/Register" autocomplete="on">
            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text bg-dark text-secondary border-0"><i class="fas fa-user"></i></span>
                    <input id="reg-nombre" type="text" class="form-control bg-dark text-white border-0" name="nombre" placeholder="Nombre" required style="border:1px solid #444;" autocomplete="given-name">
                </div>
            </div>
            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text bg-dark text-secondary border-0"><i class="fas fa-user"></i></span>
                    <input id="reg-apellido" type="text" class="form-control bg-dark text-white border-0" name="apellido" placeholder="Apellido" required style="border:1px solid #444;" autocomplete="family-name">
                </div>
            </div>
            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text bg-dark text-secondary border-0"><i class="fas fa-envelope"></i></span>
                    <input id="reg-email" type="email" class="form-control bg-dark text-white border-0" name="email" placeholder="Correo Electrónico" required style="border:1px solid #444;" autocomplete="email">
                </div>
            </div>
            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text bg-dark text-secondary border-0"><i class="fas fa-lock"></i></span>
                    <input id="reg-password" type="password" class="form-control bg-dark text-white border-0" name="password" placeholder="Contraseña" required style="border:1px solid #444;" autocomplete="new-password">
                </div>
            </div>
            <button type="submit" class="btn btn-warning w-100 fw-bold">Crear Cuenta</button>
        </form>
    </div>
</div>
@{
    ViewData["Title"] = "Home Page";
}
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<body class="text-white" style="background-color: #121212; font-family: 'Roboto', sans-serif;">
<nav class="navbar navbar-expand-lg navbar-dark bg-dark px-4">
  <a class="navbar-brand d-flex align-items-center" href="#">
    <i class="fas fa-gamepad me-2" style="font-size: 1.5rem;"></i>
    <span style="font-weight: bold; font-size: 1.5rem;">DARK CLOUD</span>
  </a>
  <form class="d-flex ms-3" role="search">
    <input class="form-control me-2" type="search" placeholder="Buscar productos..." aria-label="Buscar">
    <button class="btn btn-outline-light" type="submit">Buscar</button>
  </form>
  <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav ms-auto">
      <li class="nav-item">
        <a class="nav-link text-white" href="#"><i class="fas fa-box"></i> Todos los productos</a>
      </li>
      <li class="nav-item">
        <a class="nav-link text-white" href="#"><i class="fas fa-th-large"></i> Colecciones</a>
      </li>
      <li class="nav-item">
        <a class="nav-link text-white" href="#"><i class="fas fa-tags"></i> Promociones</a>
      </li>
      <li class="nav-item">
        <a class="nav-link text-white" href="#"><i class="fas fa-shopping-cart"></i> Carrito de compras</a>
      </li>
      <li class="nav-item">
        <form asp-controller="Account" asp-action="Login" method="get" class="mb-0">
          <button class="btn btn-outline-light btn-sm" type="submit"><i class="fas fa-user"></i> Iniciar Sesión</button>
        </form>
      </li>
    </ul>
  </div>
</nav>

<header class="hero-section text-white py-5">
  <div class="container d-flex align-items-center justify-content-between flex-wrap flex-md-nowrap" style="min-height: 50vh;">
    <div class="hero-text text-start" style="flex:1; min-width:260px; max-width:500px;">
      <h1 class="display-4 fw-bold">DARK CLOUD</h1>
      <div id="hero-carousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="5000">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <p class="lead">¡Bienvenido a tu mundo gamer! "Explora, juega y domina"</p>
          </div>
          <div class="carousel-item">
            <p class="lead">"Descubre los mejores títulos y ofertas"</p>
          </div>
          <div class="carousel-item">
            <p class="lead">"Tu aventura gamer comienza aquí"</p>
          </div>
          <div class="carousel-item">
            <p class="lead">"Juega, explora y conquista"</p>
          </div>
        </div>
      </div>
      <a href="#catalogo" class="btn btn-primary btn-lg mt-3">Explorar Catálogo</a>
    </div>
    <div class="hero-bg-carousel" style="flex:1; min-width:260px; max-width:600px; height:350px; position:relative;"></div>
  </div>
</header>

<div class="container mt-5">
  <div class="alert alert-info text-center" role="alert">
    ENVÍO GRATIS EN PRODUCTOS SUPERIORES A S/99 | ENVÍOS A TODO PERÚ
  </div>
</div>

<div id="catalogo" class="container mt-5">
  <h2 class="text-center mb-4">Categorías Destacadas</h2>
  <div class="row text-center">
    <div class="col-md-3">
      <a href="#" class="btn btn-outline-light w-100 mb-3">Videojuegos y consolas</a>
    </div>
    <div class="col-md-3">
      <a href="#" class="btn btn-outline-light w-100 mb-3">Accesorios de Consola</a>
    </div>
    <div class="col-md-3">
      <a href="#" class="btn btn-outline-light w-100 mb-3">Zona Gamer</a>
    </div>
    <div class="col-md-3">
      <a href="#" class="btn btn-outline-light w-100 mb-3">Liquidación</a>
    </div>
  </div>

  <h2 class="text-center mt-5 mb-4">Ofertas Destacadas</h2>
  <div class="row">
    @for (int i = 1; i <= 4; i++) {
      string[] images = { "/images/CyberPunk.jpg", "/images/Bloodborne-ps5.jpg", "/images/DonkeyKong.jpg", "/images/Persona5.jpeg" };
      <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
        <div class="card h-100 shadow-sm">
          <img src="@images[i - 1]" class="card-img-top" alt="Producto @i">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title">Producto @i</h5>
            <p class="card-text text-danger">-30% S/ 2,999.00</p>
            <p class="card-text text-muted"><s>S/ 4,299.00</s></p>
            <div class="d-flex align-items-center mb-3">
              <button class="btn btn-outline-secondary btn-sm me-2" onclick="decreaseCount(@i)">-</button>
              <span id="count-@i" class="mx-2">0</span>
              <button class="btn btn-outline-secondary btn-sm ms-2" onclick="increaseCount(@i)">+</button>
            </div>
            <a href="@Url.Action(SignInManager.IsSignedIn(User) ? "AddToCart" : "Login", "Account")" class="btn btn-primary mt-auto" onclick="return SignInManager.IsSignedIn(User) ? true : alert('Primero debes iniciar sesión');">
                Añadir al carrito
            </a>
          </div>
        </div>
      </div>
    }
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
  // Inicia el carrusel automáticamente
  const carousel = new bootstrap.Carousel(document.querySelector('#hero-carousel'), {
    interval: 5000,
    wrap: true
  });

  function increaseCount(id) {
    const countElement = document.getElementById(`count-${id}`);
    let count = parseInt(countElement.textContent);
    countElement.textContent = count + 1;
  }

  function decreaseCount(id) {
    const countElement = document.getElementById(`count-${id}`);
    let count = parseInt(countElement.textContent);
    if (count > 0) {
      countElement.textContent = count - 1;
    }
  }
</script>
</body>